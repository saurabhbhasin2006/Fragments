<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!-- LinearLayout for the column headings for the Line Item list -->

    <TextView
            android:id="@+id/idDetailTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    <TextView
            android:id="@+id/firstNameDetailTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"  />

    <TextView
            android:id="@+id/lastNameDetailTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    <TextView
            android:id="@+id/ageDetailTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"  />

    <TextView
            android:id="@+id/favouriteColourDetailTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"  />


</LinearLayout>